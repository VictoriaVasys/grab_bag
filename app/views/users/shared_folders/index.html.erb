<h1><%= image_tag(current_user.avatar_url, class: "img-thumbnail", width: '7%')%> <%= current_user.username %></h1>


<div class="folder_contents">
  <table class="table">
    <div class="folders">
      <th width="75px"></th>
      <th>Name</th>
      <th>Owner</th>
      <th>Date Changed</th>
      <th>Status</th>
      <th></th>
      <% @folders.each do |folder| %>
      <tr>
        <!-- <td><%= image_tag(folder.owner.avatar_url, class: 'img-thumbnail') %></td> -->
        <td><%= image_tag("good_blue_folder.png", height: 40) %></td>
        <td><%= link_to folder.name, folder.url %></td>
        <td><%= folder.owner.username %></td>
        <td> <%=folder.updated_at%></td>
        <td> <%=folder.permission%></td>
      </tr>
      <% end %>
    </div>
  </table>
</div>
